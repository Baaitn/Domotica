<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Domotica">
    <Style TargetType="{x:Type local:ccLamp}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ccLamp}">
                    <Grid>
                        <Ellipse Fill="Yellow" Name="ellYellow"/>
                        <Ellipse Fill="Gray" Name="ellGray"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type local:ccWarm}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ccWarm}">
                    <Grid>
                        <Rectangle Fill="Red" Name="rctRed"/>
                        <Rectangle Fill="Gray" Name="rctGray"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
